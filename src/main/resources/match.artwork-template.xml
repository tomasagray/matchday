<template height="900" width="1600">
  <layer name="team-emblems">
    <image height="400" src="#home-team-emblem" width="400">
      <origin x="200" y="250"/>
    </image>
    <image height="400" src="#away-team-emblem" width="400">
      <origin x="1000" y="250"/>
    </image>
  </layer>
  <layer name="home-team-color">
    <shape color="#home-team-color">
      <coords x="0" y="0"/>
      <coords x="1160" y="0"/>
      <coords x="440" y="900"/>
      <coords x="0" y="900"/>
    </shape>
  </layer>
  <layer name="away-team-color">
    <shape color="#away-team-color">
      <coords x="0" y="0"/>
      <coords x="0" y="900"/>
      <coords x="1600" y="900"/>
      <coords x="1600" y="0"/>
    </shape>
  </layer>
</template>