<!DOCTYPE aspectj PUBLIC
        "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>
    <weaver>
        <!-- only weave classes in our application-specific packages -->
        <include within="self.me.matchday.api.service.*"/>
        <include within="self.me.matchday.util.log.*"/>
    </weaver>

    <aspects>
        <!-- weave in just these aspects -->
        <aspect name="self.me.matchday.util.log.DataSourceServiceLog"/>
        <aspect name="self.me.matchday.util.log.VideoFileServiceLog"/>
        <aspect name="self.me.matchday.util.log.FileServerServiceLog"/>
        <aspect name="self.me.matchday.util.log.EventServiceLog"/>
    </aspects>
</aspectj>