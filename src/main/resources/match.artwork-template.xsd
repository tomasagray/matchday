<xs:schema xmlns:msdata="urn:schemas-microsoft-com:xml-msdata"
  xmlns:xs="http://www.w3.org/2001/XMLSchema" id="NewDataSet"
  xmlns="">
  <xs:element name="template">
    <xs:complexType>
      <xs:attribute name="height" type="xs:string"/>
      <xs:attribute name="width" type="xs:string"/>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" minOccurs="0" name="layer">
          <xs:complexType>
            <xs:attribute name="name" type="xs:string"/>
            <xs:sequence>
              <xs:element maxOccurs="unbounded" minOccurs="0" name="shape">
                <xs:complexType>
                  <xs:attribute name="color" type="xs:string"/>
                  <xs:sequence>
                    <xs:element maxOccurs="unbounded" minOccurs="0" name="coords">
                      <xs:complexType>
                        <xs:attribute name="x" type="xs:string"/>
                        <xs:attribute name="y" type="xs:string"/>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element maxOccurs="unbounded" minOccurs="0" name="image">
                <xs:complexType>
                  <xs:attribute name="height" type="xs:string"/>
                  <xs:attribute name="src" type="xs:string"/>
                  <xs:attribute name="width" type="xs:string"/>
                  <xs:sequence>
                    <xs:element maxOccurs="unbounded" minOccurs="0" name="origin">
                      <xs:complexType>
                        <xs:attribute name="x" type="xs:string"/>
                        <xs:attribute name="y" type="xs:string"/>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="NewDataSet" msdata:IsDataSet="true" msdata:UseCurrentLocale="true">
    <xs:complexType>
      <xs:choice maxOccurs="unbounded" minOccurs="0">
        <xs:element ref="template"/>
      </xs:choice>
    </xs:complexType>
  </xs:element>
</xs:schema>